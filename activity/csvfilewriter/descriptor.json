{
  "name": " csvfilewriter",
  "author": "Stefano Pantaloni",
  "type": "flogo:activity",
  "version": "0.1.0",
  "title": " csv file writer",
  "description": " csvfilewriter",
  "homepage": "https://github.com/spantalo/flogo-components/tree/master/activity/ csvfilewriter",
  "settings": [
    {
      "name": "Separator",
      "type": "string",
      "allowed" : [",",";","TAB","|"],
      "value": ",",
      "description": "Separator used for the output file",
      "required": true,
      "display": {
        "name": "Separator",
        "appPropertySupport": true
      }
    }
  ],
  "input": [
    {
      "name": "Filename",
      "required": true,
      "type": "string"
    },
    {
      "name": "FileColumns",
      "type": "array",
      "display": {
        "name": "File Columns",
        "description": "File Columns",
        "type": "table",
        "mappable": false,
        "visible" : true,
        "inputSettingsOnly":true,
        "schema": "{    \"$schema\": \"http:\/\/json-schema.org\/draft-04\/schema#\",    \"definitions\": {},    \"id\": \"http:\/\/example.com\/example.json\",    \"items\": {        \"id\": \"\/items\",        \"properties\": {            \"Name\": {                \"id\": \"\/items\/properties\/Name\",                \"type\": \"string\"            },            \"Type\": {                \"id\": \"\/items\/properties\/Type\",                \"type\": \"string\",                \"allowed\":[ \"BYTE_ARRAY\", \"INT32\", \"INT64\", \"BOOLEAN\", \"FLOAT\", \"DOUBLE\"                    ],                \"value\": \"BYTE_ARRAY\"            }        },        \"type\": \"object\"    },    \"type\": \"array\"}"
      }
    },

    {
      "name": "FileContent",
      "type": "object",
      "required": true,
      "display": {
        "name": "File Content",
        "description": "File Content",
        "type": "texteditor",
        "syntax": "json",
        "inputSettingsOnly":false,
        "mappable": true,
        "visible": true
      }
    }



  ],
  "output": [
  ]
}